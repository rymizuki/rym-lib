{
  "name": "@rym-lib/query-module",
  "version": "1.0.0-alpha.15",
  "private": false,
  "author": {
    "name": "mizuki_r",
    "email": "ry.mizuki@gmail.com"
  },
  "license": "MIT",
  "description": "",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "build/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./build/index.d.mts",
        "default": "./build/index.mjs"
      },
      "require": {
        "types": "./build/index.d.ts",
        "default": "./build/index.js"
      }
    },
    "./middleware/*": {
      "import": {
        "types": "./build/middleware/*.mts",
        "default": "./build/middleware/*.mjs"
      },
      "require": {
        "types": "./build/middleware/*.ts",
        "default": "./build/middleware/*.js"
      }
    },
    "./test-utils/*": {
      "import": {
        "types": "./build/test-utils/*.mts",
        "default": "./build/test-utils/*.mjs"
      },
      "require": {
        "types": "./build/test-utils/*.ts",
        "default": "./build/test-utils/*.js"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run --coverage",
    "lint": "eslint --max-warnings 0 .",
    "format": "prettier -w './**/*.{ts,tsx,js,json,css}' --check",
    "ncu": "npm-check-updates"
  },
  "devDependencies": {
    "@rym-lib/dev-config": "*",
    "@rym-lib/utilities": "1.0.0-alpha.15",
    "@types/node": "^22.4.1",
    "@vitest/coverage-v8": "^3.0.3",
    "npm-check-updates": "^17.0.6",
    "tsup": "^8.2.4",
    "vitest": "^3.0.3"
  },
  "dependencies": {
    "@rym-lib/exception": "^1.0.0-alpha.15"
  }
}
